@model BeerRater.Models.BreweryDetail

@{
    ViewData["Title"] = "Delete";
}

<div class="details-container">
<h1 class="controller-header">Are you sure you want to delete @Html.DisplayFor(model => model.Name)?</h1>

    <hr />
<div class="details-card">

    <div class="table-text">

    <dl class="row table-text">
