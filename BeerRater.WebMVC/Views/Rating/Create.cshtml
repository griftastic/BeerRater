@model BeerRater.Models.RatingCreate

@{
    ViewData["Title"] = "Create";
}

<div class="details-container">
<h1 class="controller-header">Rate a Beer</h1>



<hr />
<div class="row">
        <form asp-action="Create">
    <div class="form-flex2">
        <div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-card">
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review" class="control-label"></label>
                <input asp-for="Review" class="form-control" />
                <span asp-validation-for="Review" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeerId" class="control-label"></label>
                <select asp-for="BeerId" class="form-control" asp-items="ViewBag.BeerId"></select>
                <span asp-validation-for="BeerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score" class="control-label"></label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            </div>
            </div>
            <div class="form-group2">
                <input type="submit" value="Save" class="btn btn-primary" />
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
            </div>
    </div>
        </form>
</div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
