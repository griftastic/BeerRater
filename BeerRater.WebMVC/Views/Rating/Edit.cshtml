@model BeerRater.Models.RatingEdit

@{
    ViewData["Title"] = "Edit";
}


<div class="details-container">
    
<h1 class="controller-header">Edit Review</h1>

<hr />
<div class="row">
        <form asp-action="Edit">
    <div class="form-flex2">
        <div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-card">
                    <div hidden class="form-group">
                        <label class="table-text" asp-for="BeerName" class="control-label"></label>
                        <input asp-for="BeerName" class="form-control" />
                        <span asp-validation-for="BeerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="table-text" asp-for="Review" class="control-label"></label>
                        <input asp-for="Review" class="form-control" />
                        <span asp-validation-for="Review" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="table-text" asp-for="Score" class="control-label"></label>
                        <input asp-for="Score" class="form-control" />
                        <span asp-validation-for="Score" class="text-danger"></span>
                    </div>
                </div>
        </div>
            <div class="form-group2">
                <input type="submit" value="Save" class="btn btn-primary" />
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
            </div>
    </div>
        </form>
</div>

</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
