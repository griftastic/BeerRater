@model BeerRater.Models.RatingDetail

@{
    ViewData["Title"] = "Details";
}

<div class="details-container">
<h1 class="controller-header">@Html.DisplayFor(model => model.BeerName)
 Details</h1>

    <hr />
<div class="details-card">

    <div class="table-text">

    <dl class="row table-text">
        <div class="details-text">
            <p><strong>@Html.DisplayNameFor(model => model.UserId):</strong> @Html.DisplayFor(model => model.UserId) </p>
            <p><strong>@Html.DisplayNameFor(model => model.BeerName):</strong> @Html.DisplayFor(model => model.BeerName) </p>
            <p><strong>@Html.DisplayNameFor(model => model.Review):</strong> @Html.DisplayFor(model => model.Review) </p>
            <p><strong>@Html.DisplayNameFor(model => model.Score):</strong> @Html.DisplayFor(model => model.Score) </p>
        </div>
    </dl>


    </div>


</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a class="btn btn-primary" asp-controller="Rating" asp-action="Index">Back to List</a>
</div>
</div>

