@model IEnumerable<BeerRater.Models.RatingListItem>

@{
    ViewData["Title"] = "Index";
}


<div class="index-header-flex">
    <h1 class="controller-header">Ratings Index</h1>
    <a class="controller-link btn btn-primary btn-size" asp-action="Create">Rate a Beer</a>
</div>

@if(TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade-in fade-in-color" role="alert">
      
        <button type ="button" data-dismiss="alert">
            <span>&times;</span>
        </button>
            @TempData["SaveResult"]
    </div>
}
<table class="table table-text">
    
<div class="card-flex">
    @foreach (var item in Model) {

        <div class="card2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">
                    <a class="controller-link controller-link-flex" asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.BeerName)
                    </a>    
                </h5>
                <p class="card-text"><strong>@Html.DisplayNameFor(model => model.BeerName):</strong> @Html.DisplayFor(modelItem => item.BeerName)</p>
                <p class="card-text"><strong>@Html.DisplayNameFor(model => model.Score):</strong> @Html.DisplayFor(modelItem => item.Score)</p>

                <div>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Beer Details</a>                    
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>
        </div>
        }
</div>
</table>